{{#unless error}}

<div class="bg-light p-5 rounded mt-3">
    <h1>Editar</h1>
    <form action="/update" method="post">
        <div class="row mt-5">
            <div class="col-md-4 mb-3">
                <label for="nome" class="form-label">Nome Completo</label>
                <input type="hidden" value="{{id}}" name="id">
                <input value="{{nome}}" type="text" class="form-control" id="nome" name="nome" placeholder="Digite seu nome" required>
            </div>

            <div class="col-md-4 mb-3">
                <label for="email" class="form-label">Endereço de Email</label>
                <input value="{{email}}" type="email" class="form-control" id="email" name="email" placeholder="name@example.com" required>
            </div>

            <div class="col-md-4">
                <button class="mt-4 p-2 btn btn-warning">Salvar alterações</button>
            </div>
        </div>
    </form>
</div>
{{else}}
<div class="card bg-danger p-3 mt-5 text-white">
    <div class="card-body text-center">
        Houve um problema: {{problema}}
    </div>
</div>

{{/unless}}